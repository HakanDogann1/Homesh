@model Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Hizmetler</h2>
            </div>
        </div>
        <form method="post">
            <div>
                <label>Ad</label>
                <input type="text" class="form-control" asp-for="TeamName" />
            </div>
            <div>
                <label>Departman</label>
                <input type="text" class="form-control" asp-for="TeamDepartment" />
            </div>
         
            <div>
                <label>Resim</label>
                <input type="text" class="form-control" asp-for="TeamImage" />
            </div>
            <br />
            <br />
            <button class="btn btn-outline-success">Kaydet</button>
        </form>
    </div>
</div>
