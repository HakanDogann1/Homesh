@model List<Homesh.EntityLayer.Concrete.ServiceProperty>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>İletişim</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>İçerik</th>
                            <th>Fiyat</th>
                            <th>Resim</th>
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.ServicePropertyTitle</td>
                                <td>@item.ServicePropertyDescription</td>
                                <td>@item.ServicePropertyPrice</td>
                                <td>@item.ServicePropertyImage</td>
                                <td><a href="/Admin/ServiceProperty/DeleteServiceProperty/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/ServiceProperty/UpdateServiceProperty/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <br />
                <a href="/Admin/ServiceProperty/AddServiceProperty/" class="btn btn-outline-success">Ekle</a>
            </div>
        </div>
    </div>
</div>
