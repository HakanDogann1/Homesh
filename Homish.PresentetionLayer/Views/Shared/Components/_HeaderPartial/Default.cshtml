@using Homish.EntityLayer.Concrete;
@model List<Header>
@{
    int count = 1;
}
<section class="w3l-main-slider" id="home">
    <div class="companies20-content">
        <div class="owl-one owl-carousel owl-theme">
            @foreach (var item in Model)
            {
                <div class="item">
                    <li>
                        <div class="slider-info banner-view bg bg2">
                            <div class="banner-info">
                                <div class="container">
                                    <div class="banner-info-bg text-left">
                                        <p>@item.HeaderTitle1</p>
                                        <h5>@item.HeaderTitle2</h5>
                                        <a href="about.html" class="btn btn-white">Devamı...</a>
                                    </div>
                                </div>
                            </div>
                            <div class="banhny-w3grids">
                                <div class="banhny-w3grids-1">
                                    <h4 class="number-b">@count</h4>
                                </div>
                                <div class="banhny-w3grids-1">
                                    <h4><a href="#" class="hnys-title">Gayrimenkul satın almanın daha iyi yolu.</a></h4>
                                </div>
                            </div>
                        </div>
                    </li>
                </div>
                count++;
            }




        </div>
        <a href="#about" scroll="scroll">
            <div class="arrow">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </a>
    </div>
</section>